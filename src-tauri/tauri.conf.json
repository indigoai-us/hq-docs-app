{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Indigo Docs",
  "version": "0.1.0",
  "identifier": "ai.indigo.docs",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "macOSPrivateApi": true,
    "windows": [
      {
        "title": "Indigo Docs",
        "width": 1200,
        "height": 800,
        "minWidth": 900,
        "minHeight": 600,
        "resizable": true,
        "center": true,
        "transparent": true,
        "decorations": true,
        "titleBarStyle": "Overlay",
        "hiddenTitle": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "macOS": {
      "dmg": {
        "appPosition": {
          "x": 180,
          "y": 230
        },
        "applicationFolderPosition": {
          "x": 420,
          "y": 230
        },
        "windowSize": {
          "width": 600,
          "height": 400
        },
        "background": "icons/dmg-background.png"
      }
    },
    "category": "DeveloperTool",
    "shortDescription": "Turn any HQ folder into a polished documentation site",
    "longDescription": "Indigo Docs turns any HQ folder into a polished, browsable documentation site with macOS-native glass UI, Mermaid diagrams, syntax highlighting, and full-text search."
  }
}
